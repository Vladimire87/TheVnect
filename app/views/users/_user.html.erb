<div class="text-center text-gray-500 dark:text-gray-400 min-w-fit">
  <%= link_to profile_path(user) do %>
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "object-cover mx-auto mb-4 w-24 h-24 rounded-full" %>
    <% else %>
      <div class="mx-auto mb-4 w-24 h-24 rounded-full bg-gray-200 flex justify-center items-center object-cover">
        <span class="text-4xl font-extrabold">
          <%= user.name_initials  %>
        </span>
      </div>
    <% end %>
    <h3 class="mb-1 text-xl font-bold text-gray-900 dark:text-white">
      <%= user.full_name_titleize %>
    </h3>
  <% end %>
  <%= button_to 'Follow', follow_path(user), class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-1 py-1 rounded outline-none focus:outline-none  ease-linear transition-all duration-150", data: { turbo_frame: "follow_btn", turbo_action: "update" } %>
</div>
