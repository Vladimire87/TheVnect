<%= content_for :dashboard do %>
  Profile
<% end %>
<!-- component -->
<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
<section class="container mx-auto max-w-7xl">
  <div class="container mx-auto px-4">
    <div class="flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg mt-4">
      <div class="px-6">
        <div class="flex flex-wrap justify-center items-center">
          <div class="w-full lg:w-3/12 px-4 lg:order-2 flex justify-center">
            <div class="">
              <% if @user.avatar.present? %>
                <%= image_tag @user.avatar, class: "w-36 h-36 rounded-full object-cover shadow-xl mt-4" %>
              <% else %>
                <div class="w-36 h-36 rounded-full object-cover shadow-xl mt-16 bg-gray-200 flex justify-center items-center">
                  <span class="text-4xl font-extrabold">
                    <%= @user.name_initials  %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
          <div class="w-full lg:w-4/12 px-4 lg:order-3 lg:text-right lg:self-center text-end">
            <div class="py-6 px-3 mt-32 sm:mt-0">
              <% if @user != current_user %>
                <%= render 'profile/follow_btn' %>
              <% end %>
            </div>
          </div>
          <div class="w-full lg:w-4/12 px-4 lg:order-1">
            <div class="flex justify-center py-4 lg:pt-4 pt-4">
              <div class="mr-4 p-3 text-center">
                <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                  <%= @user.following.size %>
                </span>
                <span class="text-sm text-blueGray-400">
                  <%= "Friend".pluralize(@user.followers.size) %>
                </span>
              </div>
              <div class="mr-4 p-3 text-center">
                <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600"><%= @user.posts.size %></span><span class="text-sm text-blueGray-400"><%= "Post".pluralize(@user.posts.size) %></span>
              </div>
              <div class="lg:mr-4 p-3 text-center">
                <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600"><%= @user.comments.size %></span><span class="text-sm text-blueGray-400"><%= "Comment".pluralize(@user.comments.size) %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="text-center mt-4">
          <h3 class="text-4xl font-semibold leading-normal text-blueGray-700 mb-2">
            <%= @user.full_name_titleize %>
          </h3>
        </div>
        <div class="mb-2 rounded-lg">
          <% if @user.posts.count > 0 %>
            <h3 class="text-xl font-bold mb-2">
              Posts
            </h3>
            <%= render @posts %>
          <% end %>
          <% if @user.comments.count > 0 %>
            <h3 class="text-xl font-bold mb-2">
              Comments
            </h3>
            <%= render @comments %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
