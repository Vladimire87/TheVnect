<% if current_user.following?(@user) %>
  <%= button_to 'Unfollow', unfollow_path(@user), class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none ease-linear transition-all duration-150", data: { turbo_frame: "follow_btn", turbo_action: "update" } %>
<% else %>
  <% if current_user.sent_follow_request_to?(@user) %>
    <%= button_to 'Requested', unrequest_path, class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none ease-linear transition-all duration-150", data: { turbo_frame: "follow_btn", turbo_action: "update" } %>
  <% else %>
    <%= button_to 'Follow', follow_path, class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none ease-linear transition-all duration-150", data: { turbo_frame: "follow_btn", turbo_action: "update" } %>
  <% end %>
<% end %>
