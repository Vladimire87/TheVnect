<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-white uppercase bg-gray-900 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">
          Friend
        </th>
        <th scope="col" class="px-6 py-3">
          Email
        </th>
        <th scope="col" class="px-6 py-3">
          Action
        </th>
      </tr>
    </thead>
    <tbody>
      <% current_user.following.each do |follower|  %>
        <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= follower.full_name_titleize %>
          </th>
          <td class="px-6 py-4">
            <%= follower.email %>
          </td>
          <td class="px-6 py-4">
            <%= button_to 'Unfriend', unfollow_path(follower), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline", data: { turbo_frame: "follow_btn", turbo_action: "update" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
